AWSTemplateFormatVersion: "2010-09-09"

Description: "Este template es de prueba"

Parameters:
  InstanceType:
    Type: String
    Default: t2.micro 
    AllowedValues:
      - t2.micro
      - t3.micro
      - t3.small
    Description: "Enter t2.micro, m1.small, or m1.large. Default is t2.micro"

Outputs:
  IdInstancia1:
    Description: Informacion de la instancia
    Value: 
      Ref: WEBSERVER1

Resources:
  WEBSERVER1:
    Type: 'AWS::EC2::Instance'
    Properties:
      ImageId: "ami-04f1014c8adcfa670"
      KeyName: "servercurso"
      InstanceType:
          Ref: InstanceType
      SecurityGroupIds:
        - Ref: SecurityGroupSSH
      
         
  SecurityGroupSSH:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: "Security Group para acceso por SSH"
      VpcId: "vpc-9ff29ef9"
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0
      SecurityGroupEgress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0